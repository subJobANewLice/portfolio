<div class="container">
  <div class="row">
    <div class="mx-auto" style="padding: 100px 50px; border: 4mm ridge rgba(62, 117, 161, .6); background-color: #12CAA3;">
    <h2>会員登録</h2>

    <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label '名前' %><br />
      <%= f.text_field :name, class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label 'パスワード' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
    </div>

    <div class="field">
      <%= f.label 'パスワードを再入力してください' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit '新規登録', class:'btn btn-primary' %>
    </div>
  <% end %>

    <%= render "public/shared/links" %>
    </div>
  </div>
</div>
