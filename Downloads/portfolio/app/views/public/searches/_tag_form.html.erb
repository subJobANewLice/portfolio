<% if customer_signed_in? || admin_signed_in? %>
    <%= form_with url: public_search_path, method: :get, local: true do |f| %>
        <%= f.text_field :content, class:'search' %>
        <%= f.hidden_field :model, :value => "tag" %>
        <%= f.hidden_field :method, :value => "perfect" %>
        <%= f.submit 'レビュータグ検索' %>
    <% end %>
<% end %>
<style>
 @media screen and (max-width: 1300px) {
  .search{
   width: 100%;
  }
 }

 @media screen and (max-width: 520px) {
  .search{
   width: 95%;
  }
 }
</style>