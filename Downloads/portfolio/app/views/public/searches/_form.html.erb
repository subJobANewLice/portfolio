<%= form_with url: public_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content, class:'search' %>
    <%= f.select :model, options_for_select({ "ユーザー" => "customer", "ルーム" => "book", "レビュータグ" => "tag", "ルームタグ" => "book_tag" }) %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
    <%= f.submit '検索' %>
<% end %>
<style>
 @media screen and (max-width: 1300px) {
  .search{
    width: 100%;
   }
  }

 @media screen and (max-width: 520px) {
  .search{
    width: 95%;
  }
 }
</style>
