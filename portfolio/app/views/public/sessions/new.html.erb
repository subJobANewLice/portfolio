<div class="container">
  <i id="notice" style="font-size: 20px; font-family: Georgia, serif;"><%= notice %></i>
  <i class="alert" style="font-size: 20px; font-family: Georgia, serif;"><%= alert %></i>
  <div class="row">
    <div class="mx-auto" style="padding: 100px 50px; border: 4mm ridge rgba(62, 117, 161, .6); background-color: #38FFA3;">
    <h2>ログイン</h2>

<%= form_with model: @customer, url: customer_session_path do |f| %>
<%= render "public/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
  </div>

  <div class="field">
    <%= f.label 'パスワード' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label 'ログイン状態を保持する' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class:'btn btn-success' %>
  </div>
<% end %>

    <%= render "public/shared/links" %>
    </div>
  </div>
</div>
