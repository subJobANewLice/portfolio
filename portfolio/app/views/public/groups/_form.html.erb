<%= form_with model: group, local: true, url: public_groups_path, method: :post do |f| %>
    <div class="form-group">
        <%= f.label :グループ名 %>
        <%= f.text_field :name, class: 'form-control', placeholder: '1~100文字で入力してください' %>
    </div>

    <div class="form-group">
        <%= f.label :紹介文 %>
        <%= f.text_area :introduction, class: 'form-control', placeholder: '1~10000文字で入力してください' %>
    </div>

    <div class="form-group">
        <%= f.label :グループ画像 %>
        <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
    </div>
   <% unless admin_signed_in? || current_customer.name == "guestuser" %>
    <div class="form-group">
        <%= f.submit 'グループ作成', class: 'btn btn-info' %>
    </div>
   <% end %>
<% end %>