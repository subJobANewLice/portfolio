<div class="my-3">
  <%= form_with url: public_customer_daily_posts_path(customer), method: :get, class: "row justify-content-center", local: false do |f| %>
    <div class="col-auto">
      <%= f.date_field :created_at, class: "form-control" %>
    </div>
    <div class="col-auto">
      <%= f.submit "検索" , class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

